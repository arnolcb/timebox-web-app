{
  "build": {
    "env": {
      "VITE_BASE_PATH": "/app"
    }
  },
  "functions": {
    "app/**": {
      "includeFiles": "dist/**"
    }
  },
  "rewrites": [
    {
      "source": "/app/(.*)",
      "destination": "/app/index.html"
    },
    {
      "source": "/app",
      "destination": "/app/index.html"
    }
  ]
}